#include "shell.h"

/**
 * main - Simple shell program
 *
 * Return: Always 0
 */
int main(void)
{
 char *line = NULL;
 char **args = NULL;
 int status = 1;

 while (status)
 {
  write(STDOUT_FILENO, "$ ", 2);
  line = read_line();
  args = split_line(line);
  status = execute(args);
  free(line);
  free(args);
 }

 return (0);
}
